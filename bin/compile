#!/usr/bin/env bash
echo "-----> Installing TinyTeX"
cd $1
wget -qO- "https://yihui.name/gh/tinytex/tools/install-unx.sh" | sh
tlmgr install adjustbox amscls amsfonts amsmath babel biblatex bibtex bibtex.x86_64-linux booktabs caption changepage cjk-ko cm collectbox dehyph dvipdfmx dvipdfmx.x86_64-linux dvips dvips.x86_64-linux ec enumitem environ etex etoolbox euenc expex fancyhdr fancyvrb float fontspec forloop framed geometry glyphlist graphics graphics-cfg graphics-def gsftopk gsftopk.x86_64-linux helvetic hyperref hyphen-base ifluatex ifmtarg iftex ifxetex inconsolata knuth-lib kotex-plain kotex-utf kpathsea kpathsea.x86_64-linux l3kernel l3packages latex latex-bin latex-bin.x86_64-linux latex-fonts latexconfig latexmk latexmk.x86_64-linux listings lm logreq lua-visual-debug luainputenc lualibs luaotfload luaotfload.x86_64-linux luatex luatex.x86_64-linux luatexko makeindex makeindex.x86_64-linux mathspec mathtools metafont metafont.x86_64-linux mfware mfware.x86_64-linux ms nanumtype1 natbib oberdiek pdftex pdftex.x86_64-linux pgf pgfplots plain scheme-infraonly setspace tcolorbox tetex tetex.x86_64-linux tex tex-ini-files tex.x86_64-linux texlive.infra texlive.infra.x86_64-linux tikz-cd times tipa titlesec titling tools trimspaces ulem unicode-data upquote url wrapfig xcolor xetex xetex.x86_64-linux xetexconfig xifthen xkeyval xunicode zapfding